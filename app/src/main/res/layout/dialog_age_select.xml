<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minHeight="245dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="46dp">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_bg_transparent_grey_selector"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="取消"
                android:textColor="@color/text_F5922F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="年龄"
                android:textColor="@color/text_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_bg_transparent_grey_selector"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:text="确定"
                android:textColor="@color/text_F5922F"
                android:textSize="14sp" />

        </RelativeLayout>

        <com.contrarywind.view.WheelView
            android:id="@+id/wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="46dp">

            <TextView
                android:id="@+id/age_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@drawable/shape_strok_radius_3"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:paddingTop="5dp"
                android:paddingRight="7dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_F5922F"
                android:textSize="14sp"
                tools:text="广州市" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
